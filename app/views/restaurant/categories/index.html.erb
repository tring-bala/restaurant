<%title "Categories | #{current_restaurant.name} | Triggy"%>
<%page_name "Categories"%>
<div class="row">
  <div class="col-12">
    <%= link_to new_restaurant_category_path, class: "btn btn-info btn-sm mb-3 float-right" do%>
    <em class="fas fa-plus"></em> New Category
    <% end -%>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th width="5%">S.No</th>
            <th>Name</th>
            <th width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <%if @categories.present?%>
          <%i = (page - 1) * per_page%>
          <% @categories.each do |category| %>
          <tr>
            <td><%= i+= 1%></td>
            <td>
              <%= category.name %>
            </td>
            <td>
              <%= link_to edit_restaurant_category_path(category), class: "btn btn-sm btn-warning" do %>
                <em class="fas fa-edit"></em>
              <% end -%>
              <%= link_to [:restaurant, category], class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this category?"} do %>
                <em class="fas fa-trash"></em>
              <% end -%>
            </td>
          </tr>
          <% end %>
          <%else%>
          <tr>
            <td colspan="7">
              <h4 class="text-danger text-center">No Records Found!</h4>
            </td>
          </tr>
          <% end -%>
        </tbody>
      </table>
      <%= paginate @categories, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
    </div>
  </div>
</div>