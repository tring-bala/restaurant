<div class="row">
  <div class="col-12">
    <%= link_to restaurant_branches_path, class: "btn btn-info btn-sm mb-3 float-right" do%>
    <em class="fas fa-arrow-left"></em> Back
    <% end -%>
    
  </div>
</div>
<%= form_with(model: [:restaurant, branch], local: true) do |form| %>
  <% if branch.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(branch.errors.count, "error") %> prohibited this branch from being saved:</h2>

      <ul>
      <% branch.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :name do %>
        Branch Name <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.text_field :name , class: "form-control", required: true%>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :number do %>
        Phone Number <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.text_field :number, class: "form-control", required: true %>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :email do %>
        Branch Email <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.email_field :email, class: "form-control", required: true %>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :contact_name do %>
        Contact Name <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.text_field :contact_name, class: "form-control", required: true %>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :contact_person do %>
        Contact Person <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.text_field :contact_person, class: "form-control", required: true %>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :is_head_branch do %>
         Head Branch
      <% end -%>
      <%= form.check_box :is_head_branch, class: "form-control"%>
    </div>

    <div class="col-12">
      <%= form.submit "Submit", class: "btn btn-success btn-sm" %>
    </div>
  </div>


  <div class="actions">
  </div>
<% end %>
