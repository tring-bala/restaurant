<%title "Restaurants | Triggy"%>
<%page_name "Branches"%>
<div class="row">
  <div class="col-12">
    <%= link_to new_restaurant_branch_path, class: "btn btn-info btn-sm mb-3 float-right" do%>
    <em class="fas fa-plus"></em> New Branch
    <% end -%>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Number</th>
            <th>Email</th>
            <th>Contact Name</th>
            <th>Contact Person</th>
            <th>Head Branch</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%if @branches.present?%>
          <%i = (page - 1) * per_page%>
          <% @branches.each do |branch| %>
          <tr>
            <td><%= i+= 1%></td>
            <td>
              <%= branch.name %>
            </td>
            <td>
              <%= branch.number %>
            </td>
            <td>
              <%= branch.email %>
            </td>
            <td>
              <%= branch.contact_name %><br>
              <%= branch.contact_person %>
            </td>
            <td>
              <%= branch.is_head_branch %>
            </td>
            <td>
              <%= link_to edit_restaurant_branch_path(branch), class: "btn btn-sm btn-warning" do %>
                <em class="fas fa-edit"></em>
              <% end -%>
              <%= link_to [:restaurant, branch], class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this branch?"} do %>
                <em class="fas fa-trash"></em>
              <% end -%>
            </td>
          </tr>
          <% end %>
          <%else%>
          <tr>
            <td colspan="6">
              <h4 class="text-danger text-center">No Records Found!</h4>
            </td>
          </tr>
          <% end -%>
        </tbody>
      </table>
      <%= paginate @branches, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
    </div>
  </div>
</div>