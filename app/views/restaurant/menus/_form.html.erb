<div class="row">
  <div class="col-12">
    <%= link_to restaurant_menus_path, class: "btn btn-info btn-sm mb-3 float-right" do%>
    <em class="fas fa-arrow-left"></em> Back
    <% end -%>

  </div>
</div>
<%= form_with(model: [:restaurant, menu], local: true) do |form| %>
  <% if menu.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(menu.errors.count, "error") %> prohibited this menu from being saved:</h2>

      <ul>
      <% menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :name do %>
        Menu Name <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.text_field :name , class: "form-control", required: true%>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :url do %>
        Image <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.url_field :image_url, class: "form-control", required: true %>
    </div>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :number do %>
        Menu Code <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.number_field :menu_code, class: "form-control", required: true %>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
    <label>Description</label><i class="fas fa-asterisk required_field"></i>
      <%= form.text_field :description, class: "form-control" %>
    </div>

    <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-3">
      <%= form.label :price do %>
        Price <i class="fas fa-asterisk required_field"></i>
      <% end -%>
      <%= form.number_field :price, class: "form-control", required: true %>
    </div>

    <div class="col-12">
      <%= form.submit "Submit", class: "btn btn-success btn-sm" %>
    </div>
  </div>
<% end %>
