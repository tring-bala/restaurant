<!DOCTYPE html>
<html>
  <head>
    <title>Triggy</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'landing', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'landing', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/landing/header'%>
    <div class="container mt-3">
      <%if notice%><p class="alert alert-success"><%= notice %></p><%end%>
      <%if alert%><p class="alert alert-danger"><%= alert %></p><%end%>
      <%= yield %>
    </div>
  </body>
</html>
