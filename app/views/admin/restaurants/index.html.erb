<%title "Restaurants | Triggy"%>
<%page_name "Restaurants"%>
<div class="row">
  <div class="col-12">
    <%= link_to new_admin_restaurant_path, class: "btn btn-info btn-sm mb-3 float-right" do%>
    <em class="fas fa-plus"></em> New Restaurant
    <% end -%>
    <div class="table-responsive">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>S.No</th>
            <th>Name</th>
            <th>Number</th>
            <th>Email</th>
            <th>Contact Details</th>
            <th>Website</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <%if @restaurants.present?%>
          <%i = (page - 1) * per_page%>
          <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= i+= 1%></td>
            <td>
              <%= restaurant.name %>
            </td>
            <td>
              <%= restaurant.number %>
            </td>
            <td>
              <%= restaurant.email %>
            </td>
            <td>
              <%= restaurant.contact_person %><br>
              <%= restaurant.contact_number %>
            </td>
            <td>
              <%= restaurant.website %>
            </td>
            <td>
              <%= link_to edit_admin_restaurant_path(restaurant), class: "btn btn-sm btn-warning" do %>
                <em class="fas fa-edit"></em>
              <% end -%>
              <%= link_to [:admin, restaurant], class: "btn btn-sm btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"} do %>
                <em class="fas fa-trash"></em>
              <% end -%>
            </td>
          </tr>
          <% end %>
          <%else%>
          <tr>
            <td colspan="7">
              <h4 class="text-danger text-center">No Records Found!</h4>
            </td>
          </tr>
          <% end -%>
        </tbody>
      </table>
      <%= paginate @restaurants, theme: 'twitter-bootstrap-4', :pagination_class => "pagination justify-content-center" %>
    </div>
  </div>
</div>